{
   "root": true,
   "env": {
      "browser": true,
      "commonjs": true,
      "node": true,
      "es6": true,
      "es2017": true
   },
   "rules": {
      "no-empty": "error",
      "indent": ["error", 3],
      "no-undef-init": "error",
      "no-extra-semi": "error",
      "no-func-assign": "error",
      "no-unreachable": "error",
      "semi": ["error", "always"],
      "no-duplicate-case": "error",
      "no-empty-function": "error",
      "quotes": ["error", "single"]
   },
   "extends": ["prettier"]
}
