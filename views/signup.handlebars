<!-- importing js file -->
<script async src="/js/wazzamStart.js"></script>

<style>
	input[type=text],
	input[type=password] {
		width: 100%;
		padding: 12px 20px;
		margin: 8px 0;
		display: inline-block;
		border: 1px solid #ccc;
		box-sizing: border-box;
	}

	button {
		width: 100%;
		color: white;
		border: none;
		margin: 8px 0;
		cursor: pointer;
		padding: 14px 20px;
		border-radius: 10px;
		background-color: #007BFF;
	}

	button:hover {
		opacity: 0.8;
	}
</style>

<section class="w3-container w3-center backdrop-02">
	<img src="/assets/png/batman.png" alt="batman" data-speed="-5" class="batman">
	<div class="col-md-6 container w3-padding w3-center w3-margin w3-card">
		<h2>Sign-Up</h2>
		<form action="/signup" method="POST" class="form signup-form">
			<div>
				<div class="form-group">
					<label for="username-signup"><b>Username</b></label>
					<input class="form-input" type="text" id="username-signup" name="username" required>
				</div>
				<div class="form-group">
					<label for="email-signup"><b>Email</b></label>
					<input class="form-input" type="text" id="email-signup" name="email" required>
				</div>
				<div class="form-group">
					<label for="password-signup"><b>Password</b></label>
					<input class="form-input" type="password" id="password-signup" name="password" required>
				</div>
				<button class="btn btn-primary" type="submit">Register</button>
				<label>
					<input type="checkbox" checked="checked" name="remember"> Remember me
				</label>
			</div>
		</form>
	</div>
</section>