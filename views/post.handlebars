<header class="w3-container w3-center w3-padding-32">
   <h1 class="animated-header"><b>WAZZAM</b></h1>
   <p>Charge your social battery! <i class="fas fa-bolt"></i></p>
</header>
<div class="w3-content" style="max-width: 1400px">
   <div id="wazzam-container"></div>
   <div class="w3-row">
      <main class="w3-col l8 s12">
         <article class="w3-card-4 w3-margin w3-white">
            <div class="content">
               <h2><b>{{post.title}}</b></h2>
               <p class="w3-opacity">{{time}}</p>
            </div>
            <div class="content">
               <p>{{post.message}}</p>
               <div class="w3-row">
                  <div class="w3-col m4 w3-hide-small">
                     <!-- todo: make this dynamic with a javascript file -->
                     <p><b>Comments</b> <span class="w3-badge">0</span></p>
                  </div>
               </div>
            </div>
         </article>
         <hr>
         <!-- Repeat the above article block for other blog entries -->
      </main>
   </div>
</div>