<script async src="/js/main.js"></script>

<header class="w3-container w3-center w3-padding-32">
    <h1 class="animated-header"><b>WAZZAM</b></h1>
    <p>Charge your social battery! <i class="fas fa-bolt"></i>
        {{#if username}}
        You are logged in as {{username}}.
        {{else}}
        Please take a moment to login!
        {{/if}}
    </p>
    {{#if username}}
    <a class="w3-button w3-disabled w3-hover-grayscale w3-border" href="/login"><b>LOGIN</b></a>
    <a class="w3-button w3-round w3-white w3-border" id="logout" href="/logout"><b>LOGOUT</b></a>
    {{else}}
    <a class="w3-button w3-round w3-white w3-border" href="/login"><b>LOGIN</b></a>
    <a class="w3-button w3-disabled w3-hover-grayscale w3-border" id="logout" href="/logout"><b>LOGOUT</b></a>
    {{/if}}
</header>
<div class="w3-content w3-transparent" style="max-width: 1400px">
    <div class="w3-row">
        <main class="w3-col l8 s12">
            {{#each posts}}
            <article class="w3-card-4 w3-margin w3-white" style="border-radius: 0.625rem">
                <div class="content">
                    <h2><b>{{title}}</b></h2>
                    <p class="w3-opacity">{{time}}</p>
                </div>
                <div class="content">
                    <p>{{message}}</p>
                    <div class="w3-row">
                        <div class="w3-col m8 s12">
                            <a class="w3-button w3-white w3-border" href="/post/{{id}}"><b>READ MORE
                                    ¬ª</b></a>
                        </div>
                        <div class="w3-col m4 w3-hide-small">
                            <!-- todo: make this dynamic with a javascript file -->
                            <a class="w3-button w3-white w3-border comment-btn"
                                href="/create-comment/{{id}}"><b>Comments</b>
                                <span class="w3-badge">{{comments.length}}</span></a>
                        </div>
                    </div>
                </div>
            </article>
            {{/each}}
            <hr>
            <!-- Repeat the above article block for other blog entries -->
        </main>
        <aside class="w3-col l4">
            <!-- this is empty -->
            <div class="w3-card w3-margin">
                <div class="content">
                    <a class="w3-button" href="/create-post">
                        Create Post üìù
                    </a>
                </div>
            </div>
            <hr>
            <div class="w3-card w3-margin w3-margin-top">
                <script id="wazzam-template" type="text/x-handlebars-template"></script>
                <div class="content">
                    <h4><b>My Name</b></h4>
                    <p>Just me, myself and I, exploring the universe of unknownment. I have a heart of love and an
                        interest in lorem ipsum and mauris neque quam blog. I want to share my world with you.</p>
                </div>
            </div>
            <hr>
            <div class="w3-card w3-margin">
                <div class="content">
                    <h4>Popular Posts</h4>
                </div>
                <ul class="w3-ul w3-hoverable w3-white">
                    <li class="w3-padding-16">
                    </li>
                    <!-- Repeat similar list items for other popular posts -->
                </ul>
            </div>
        </aside>
    </div>
</div>
<footer class="w3-container w3-dark-grey w3-padding-32 w3-margin-top">
    <button class="w3-button w3-black w3-disabled w3-padding-large w3-margin-bottom">Previous</button>
    <a class="w3-button w3-black w3-padding-large w3-margin-bottom" href="">Next ¬ª</a>
    <p>Powered by <a href="https://www.w3schools.com/w3css/default.asp" target="_blank">w3.css</a></p>
</footer>
